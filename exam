library(ncdf4)
library(raster)
library(sf)

setwd("/Users/francescovettore/Desktop/lab.exam")

fire <- st_read("fire_archive_V1_177480.shp")
fire

st_geometry_type(fire)

ggplot() + 
  geom_sf(data = fire, size = 0.01, color = "red") + 
  ggtitle("fire location") + 
  coord_sf()
  
fcover_sep <- raster("c_gls_FCOVER_201910240000_GLOBE_PROBAV_V1.5.1.nc")

# set plot extension
plot(fcover_sep, axes=TRUE, ext = extent(fcover_sep))
